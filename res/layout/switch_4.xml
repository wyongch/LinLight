<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wireless_switch4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/wireless_switch4_img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:background="@drawable/switch4_top1" />

        <ImageView
            android:id="@+id/wireless_switch4_img2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/wireless_switch4_img1"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:background="@drawable/switch4_top2" />

        <ImageView
            android:id="@+id/wireless_switch4_img3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/wireless_switch4_img1"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:background="@drawable/switch4_bottom1" />

        <ImageView
            android:id="@+id/wireless_switch4_img4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/wireless_switch4_img2"
            android:layout_toRightOf="@+id/wireless_switch4_img3"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:background="@drawable/switch4_bottom2" />
    </RelativeLayout>

</LinearLayout>
