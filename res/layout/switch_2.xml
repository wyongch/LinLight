<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/wireless_switch2">
    
     <ImageView
            android:id="@+id/wireless_switch2_img1"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/switch2_left"
            android:onClick="onClick" />
<!-- android:src="@drawable/switch2_left" -->
        <ImageView
            android:id="@+id/wireless_switch2_img2"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/wireless_switch2_img1"
            android:scaleType="fitXY"
            android:background="@drawable/switch2_right"
            android:onClick="onClick" />
    
