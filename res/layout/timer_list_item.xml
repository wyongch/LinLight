<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<!--     android:layout_height="80dp" > -->

    <TextView
        android:id="@+id/timer_textview_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="8:00"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/timer_weeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/timer_textview_time"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="tiemr_weeks" />

    <TextView
        android:id="@+id/timer_obj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tiemr_action"
     	android:layout_below="@+id/tiemr_action"
        android:text="timer_obj" />
    
<!--      android:layout_alignParentBottom="true" -->

    <TextView
        android:id="@+id/tiemr_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timer_weeks"
        android:text="timer_action" 
        android:layout_below="@+id/timer_weeks" />
    
<!--      android:layout_alignParentBottom="true" -->
<!--         android:layout_centerHorizontal="true" -->
        
<!--         android:background="@drawable/on_off_bg"/> -->

<!--     android:background="@color/white" -->

   

    <Switch
        android:id="@+id/timer_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:focusable="false"		
        
        android:thumb="@drawable/switch_bottom_n"
        android:track="@drawable/switch_track_n" />
<!--     android:layout_centerVertical="true" -->
<!--             android:textOff="关" -->
<!--         android:textOn="开" -->
<!-- 	<Switch  -->
<!-- 	    android:layout_width="30dp" -->
<!-- 	    android:layout_height="30dp"/> -->


	 <TextView
        android:id="@+id/timer_textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/timer_switch"
        android:text="未开启"
        android:textSize="12dp" />
    

</RelativeLayout>